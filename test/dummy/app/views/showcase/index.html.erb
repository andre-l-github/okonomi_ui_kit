<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900">Okonomi UI Kit</h1>
      <p class="mt-4 text-lg text-gray-600">
        Reusable Rails components built with ERB and Tailwind CSS
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @components.each do |component| %>
        <%= link_to showcase_component_path(component[:name]), 
            class: "block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            <%= component[:title] %>
          </h3>
          <p class="text-gray-600">
            <%= component[:description] %>
          </p>
        <% end %>
      <% end %>
    </div>

    <div>
      <%= ui.badge "Afuera!", severity: :success %>
      <%= ui.badge "Deine Mudder", severity: :danger %>
    </div>

    <div>
      <%= ui.alert "Hallo!" %>
    </div>
  </div>
</div>
