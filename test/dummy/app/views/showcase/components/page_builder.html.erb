<%= ui.page do |p| %>
  <%= p.page_header do |header| %>
    <% header.breadcrumbs do |b| %>
      <% b.link("Components", root_path) %>
      <% b.link("Page Builder", "#", current: true) %>
    <% end %>
    
    <%= header.row do |row| %>
      <% row.title("Page Builder Showcase") %>
      <% row.actions do %>
        <%= link_to root_path, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <%= svg_icon("heroicons/outline/arrow-path", class: "h-4 w-4 mr-2") %>
          Back to Components
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= p.section(title: "Overview") do |s| %>
    <%= s.body do %>
      <div class="prose prose-blue max-w-none">
        <p class="text-gray-600 mb-4">
          The PageBuilder provides a semantic, component-based approach to building consistent page layouts. 
          It offers nested builders for pages, headers, sections, and attributes.
        </p>
        
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-blue-900 font-medium mb-2">Key Benefits</h3>
          <ul class="text-sm text-blue-800 space-y-1">
            <li>• Consistent styling across all pages</li>
            <li>• Semantic structure with proper accessibility</li>
            <li>• Reusable components reduce code duplication</li>
            <li>• Easy to maintain and extend</li>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= p.section(title: "Basic Structure") do |s| %>
    <%= s.subtitle("The fundamental page layout using the page builder") %>
    <%= s.body do %>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Code Example</h3>
          <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto text-sm"><code>&lt;%= page do |p| %&gt;
  &lt;%= p.page_header do |header| %&gt;
    &lt;%= header.breadcrumbs do |b| %&gt;
      &lt;% b.link("Home", "/") %&gt;
    &lt;% end %&gt;
    
    &lt;%= header.row do |row| %&gt;
      &lt;% row.title("Page Title") %&gt;
      &lt;% row.actions do %&gt;
        &lt;%= ui.button_to("Action", "#") %&gt;
      &lt;% end %&gt;
    &lt;% end %&gt;
  &lt;% end %&gt;

  &lt;%= p.section(title: "Section") do |s| %&gt;
    &lt;%= s.body do %&gt;
      Content goes here
    &lt;% end %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
        </div>
        
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Result</h3>
          <div class="border border-gray-200 rounded-lg p-4 bg-white">
            <div class="text-sm text-gray-500 mb-2">Breadcrumbs: Home</div>
            <div class="flex justify-between items-center mb-4">
              <h1 class="text-xl font-bold text-gray-900">Page Title</h1>
              <button class="px-3 py-1 bg-blue-600 text-white rounded text-sm">Action</button>
            </div>
            <div class="bg-gray-50 p-3 rounded">
              <h2 class="font-medium text-gray-900 mb-2">Section</h2>
              <p class="text-gray-600">Content goes here</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= p.section(title: "Page Headers") do |s| %>
    <%= s.subtitle("Headers with breadcrumbs, titles, and actions") %>
    <%= s.actions do %>
      <%= link_to "#", class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
        <%= svg_icon("heroicons/outline/document-text", class: "h-4 w-4 mr-1 inline") %>
        View Documentation
      <% end %>
    <% end %>
    <%= s.body do %>
      <div class="space-y-6">
        <!-- Simple Header -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Simple Header</h3>
          <div class="border border-gray-200 rounded-lg p-4 bg-white">
            <div class="flex flex-col gap-2">
              <nav class="text-sm text-gray-500">
                <span>Components</span> / <span class="text-gray-900">Page Builder</span>
              </nav>
              <div class="flex w-full justify-between items-center">
                <h1 class="text-2xl font-bold leading-7 text-gray-900">Simple Page Title</h1>
              </div>
            </div>
          </div>
          <pre class="mt-3 bg-gray-900 text-gray-100 p-3 rounded text-xs overflow-x-auto"><code>&lt;%= p.page_header do |header| %&gt;
  &lt;%= header.breadcrumbs do |b| %&gt;
    &lt;%= b.link("Components", "/") %&gt;
    &lt;%= b.link("Page Builder", "#", current: true) %&gt;
  &lt;% end %&gt;
  
  &lt;%= header.row do |row| %&gt;
    &lt;%= row.title("Simple Page Title") %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
        </div>

        <!-- Header with Actions -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Header with Actions</h3>
          <div class="border border-gray-200 rounded-lg p-4 bg-white">
            <div class="flex flex-col gap-2">
              <nav class="text-sm text-gray-500">
                <span>Admin</span> / <span class="text-gray-900">Users</span>
              </nav>
              <div class="flex w-full justify-between items-center">
                <h1 class="text-2xl font-bold leading-7 text-gray-900">User Management</h1>
                <div class="flex gap-2">
                  <button class="px-3 py-2 border border-gray-300 rounded-md text-sm">Export</button>
                  <button class="px-3 py-2 bg-blue-600 text-white rounded-md text-sm">Add User</button>
                </div>
              </div>
            </div>
          </div>
          <pre class="mt-3 bg-gray-900 text-gray-100 p-3 rounded text-xs overflow-x-auto"><code>&lt;%= header.row do |row| %&gt;
  &lt;%= row.title("User Management") %&gt;
  &lt;%= row.actions do %&gt;
    &lt;%= ui.button_to("Export", "#", variant: :secondary) %&gt;
    &lt;%= ui.button_to("Add User", "#", variant: :primary) %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= p.section(title: "Sections") do |s| %>
    <%= s.subtitle("Flexible content sections with titles, subtitles, and actions") %>
    <%= s.body do %>
      <div class="space-y-6">
        <!-- Basic Section -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Basic Section</h3>
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <div class="bg-white px-6 py-4 border-b border-gray-200">
              <h2 class="text-lg font-medium text-gray-900">Section Title</h2>
            </div>
            <div class="bg-white p-6">
              <p class="text-gray-600">This is the section body content. It can contain any HTML elements.</p>
            </div>
          </div>
          <pre class="mt-3 bg-gray-900 text-gray-100 p-3 rounded text-xs overflow-x-auto"><code>&lt;%= p.section(title: "Section Title") do |s| %&gt;
  &lt;%= s.body do %&gt;
    &lt;p&gt;This is the section body content.&lt;/p&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
        </div>

        <!-- Section with Subtitle and Actions -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Section with Subtitle and Actions</h3>
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <div class="bg-white px-6 py-4 border-b border-gray-200">
              <div class="flex justify-between items-start">
                <div>
                  <h2 class="text-lg font-medium text-gray-900">Advanced Settings</h2>
                  <p class="mt-1 text-sm text-gray-500">Configure advanced options for your account</p>
                </div>
                <div class="flex gap-2">
                  <button class="text-blue-600 hover:text-blue-800 text-sm">Reset</button>
                  <button class="px-3 py-1 bg-blue-600 text-white rounded text-sm">Save</button>
                </div>
              </div>
            </div>
            <div class="bg-white p-6">
              <div class="space-y-4">
                <div class="flex items-center justify-between">
                  <span class="text-gray-900">Email notifications</span>
                  <input type="checkbox" class="rounded" checked>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-900">Two-factor authentication</span>
                  <input type="checkbox" class="rounded">
                </div>
              </div>
            </div>
          </div>
          <pre class="mt-3 bg-gray-900 text-gray-100 p-3 rounded text-xs overflow-x-auto"><code>&lt;%= p.section(title: "Advanced Settings") do |s| %&gt;
  &lt;%= s.subtitle("Configure advanced options for your account") %&gt;
  &lt;%= s.actions do %&gt;
    &lt;%= link_to "Reset", "#", class: "text-blue-600 hover:text-blue-800 text-sm" %&gt;
    &lt;%= ui.button_to("Save", "#", size: :small) %&gt;
  &lt;% end %&gt;
  &lt;%= s.body do %&gt;
    &lt;!-- Form content --&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= p.section(title: "Attributes") do |s| %>
    <%= s.subtitle("Structured key-value display for data") %>
    <%= s.body do %>
      <div class="space-y-6">
        <!-- Basic Attributes -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Basic Attributes</h3>
          <div class="border border-gray-200 rounded-lg overflow-hidden bg-white">
            <div class="divide-y divide-gray-100">
              <div class="py-6 sm:grid sm:grid-cols-3 sm:gap-4 px-6">
                <dt class="text-sm font-medium text-gray-500">Full name</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">John Doe</dd>
              </div>
              <div class="py-6 sm:grid sm:grid-cols-3 sm:gap-4 px-6">
                <dt class="text-sm font-medium text-gray-500">Email address</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">john.doe@example.com</dd>
              </div>
              <div class="py-6 sm:grid sm:grid-cols-3 sm:gap-4 px-6">
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
                </dd>
              </div>
            </div>
          </div>
          <pre class="mt-3 bg-gray-900 text-gray-100 p-3 rounded text-xs overflow-x-auto"><code>&lt;%= p.section(title: "User Details") do |s| %&gt;
  &lt;%= s.body do %&gt;
    &lt;%= s.attribute("Full name", "John Doe") %&gt;
    &lt;%= s.attribute("Email address", "john.doe@example.com") %&gt;
    &lt;%= s.attribute("Status") do %&gt;
      &lt;%= ui.badge("Active", severity: :success) %&gt;
    &lt;% end %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
        </div>

        <!-- Complex Attributes -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Complex Attributes with Actions</h3>
          <div class="border border-gray-200 rounded-lg overflow-hidden bg-white">
            <div class="divide-y divide-gray-100">
              <div class="py-6 sm:grid sm:grid-cols-3 sm:gap-4 px-6">
                <dt class="text-sm font-medium text-gray-500">Profile picture</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                  <div class="flex items-center gap-3">
                    <div class="h-10 w-10 rounded-full bg-gray-300"></div>
                    <div>
                      <p class="text-sm text-gray-900">avatar.jpg</p>
                      <p class="text-xs text-gray-500">Last updated 2 days ago</p>
                    </div>
                    <button class="ml-auto text-blue-600 hover:text-blue-800 text-sm">Change</button>
                  </div>
                </dd>
              </div>
              <div class="py-6 sm:grid sm:grid-cols-3 sm:gap-4 px-6">
                <dt class="text-sm font-medium text-gray-500">Permissions</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                  <div class="flex flex-wrap gap-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Admin</span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Editor</span>
                    <button class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border border-gray-300 hover:bg-gray-50">
                      <%= svg_icon("heroicons/outline/plus", class: "h-3 w-3 mr-1") %>
                      Add
                    </button>
                  </div>
                </dd>
              </div>
            </div>
          </div>
          <pre class="mt-3 bg-gray-900 text-gray-100 p-3 rounded text-xs overflow-x-auto"><code>&lt;%= s.attribute("Profile picture") do %&gt;
  &lt;div class="flex items-center gap-3"&gt;
    &lt;div class="h-10 w-10 rounded-full bg-gray-300"&gt;&lt;/div&gt;
    &lt;div&gt;
      &lt;p class="text-sm text-gray-900"&gt;avatar.jpg&lt;/p&gt;
      &lt;p class="text-xs text-gray-500"&gt;Last updated 2 days ago&lt;/p&gt;
    &lt;/div&gt;
    &lt;button class="ml-auto text-blue-600"&gt;Change&lt;/button&gt;
  &lt;/div&gt;
&lt;% end %&gt;</code></pre>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= p.section(title: "Complete Example") do |s| %>
    <%= s.subtitle("A real-world example combining all PageBuilder features") %>
    <%= s.body do %>
      <div class="bg-gray-50 p-6 rounded-lg">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Live Example: User Profile Page</h3>
        
        <!-- Simulated Page -->
        <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
          <div class="p-6">
            <%= ui.page do |profile_page| %>
              <%= profile_page.page_header do |header| %>
                <% header.breadcrumbs do |b| %>
                  <% b.link("Dashboard", "#") %>
                  <% b.link("Users", "#") %>
                  <% b.link("John Doe", "#", current: true) %>
                <% end %>
                
                <%= header.row do |row| %>
                  <%= row.title("John Doe") %>
                  <%= row.actions do %>
                    <%= ui.button_to("Edit Profile", "#", variant: :primary, size: :small) %>
                    <%= ui.button_to("Send Message", "#", variant: :secondary, size: :small) %>
                  <% end %>
                <% end %>
              <% end %>

              <%= profile_page.section(title: "Personal Information") do |info| %>
                <%= info.subtitle("Basic user details and contact information") %>
                <%= info.actions do %>
                  <%= link_to "#", class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
                    <%= svg_icon("heroicons/outline/pencil", class: "h-4 w-4 mr-1 inline") %>
                    Edit
                  <% end %>
                <% end %>
                <%= info.body do %>
                  <%= info.attribute("Full name", "John Doe") %>
                  <%= info.attribute("Email", "john.doe@example.com") %>
                  <%= info.attribute("Phone", "+1 (555) 123-4567") %>
                  <%= info.attribute("Status") do %>
                    <%= ui.badge("Active", severity: :success) %>
                  <% end %>
                  <%= info.attribute("Last login", "2 hours ago") %>
                <% end %>
              <% end %>

              <%= profile_page.section(title: "Account Settings") do |settings| %>
                <%= settings.subtitle("Security and notification preferences") %>
                <%= settings.body do %>
                  <%= settings.attribute("Two-factor authentication") do %>
                    <div class="flex items-center justify-between">
                      <span class="text-green-600 flex items-center">
                        <%= svg_icon("heroicons/outline/check-circle", class: "h-4 w-4 mr-1") %>
                        Enabled
                      </span>
                      <button class="text-blue-600 hover:text-blue-800 text-sm">Configure</button>
                    </div>
                  <% end %>
                  <%= settings.attribute("Email notifications", "Enabled for all activities") %>
                  <%= settings.attribute("API Access") do %>
                    <div class="flex items-center justify-between">
                      <code class="text-xs bg-gray-100 px-2 py-1 rounded">sk_live_abcd1234...</code>
                      <button class="text-blue-600 hover:text-blue-800 text-sm">Regenerate</button>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= p.section(title: "Code Reference") do |s| %>
    <%= s.subtitle("Quick reference for all PageBuilder methods") %>
    <%= s.body do %>
      <div class="bg-gray-900 text-gray-100 p-6 rounded-lg overflow-x-auto">
        <pre class="text-sm"><code># Page Builder Methods
page                              # Root container
├── page_header                   # Page header section  
│   ├── breadcrumbs              # Breadcrumb navigation
│   └── row                      # Header row with title/actions
│       ├── title(text, **opts)  # Page title
│       └── actions              # Action buttons block
└── section(title:, **opts)      # Content section
    ├── title(text, **opts)      # Section title  
    ├── subtitle(text, **opts)   # Section subtitle
    ├── actions                  # Section action buttons
    ├── body                     # Main section content
    └── attribute(label, value)   # Key-value attribute display

# Usage Pattern
&lt;%= page do |p| %&gt;
  &lt;%= p.page_header do |h| %&gt;
    &lt;%= h.breadcrumbs do %&gt;...&lt;% end %&gt;
    &lt;%= h.row do |r| %&gt;
      &lt;%= r.title("Title") %&gt;
      &lt;%= r.actions do %&gt;...&lt;% end %&gt;
    &lt;% end %&gt;
  &lt;% end %&gt;
  
  &lt;%= p.section(title: "Section") do |s| %&gt;
    &lt;%= s.subtitle("Description") %&gt;
    &lt;%= s.actions do %&gt;...&lt;% end %&gt;
    &lt;%= s.body do %&gt;
      &lt;%= s.attribute("Key", "Value") %&gt;
    &lt;% end %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
      </div>
    <% end %>
  <% end %>
<% end %>