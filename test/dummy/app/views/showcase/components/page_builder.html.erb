  <% p.section(title: "Code Reference") do |s| %>
    <% s.subtitle("Quick reference for all PageBuilder methods") %>
    <% s.body do %>
      <div class="p-6">
        <%= ui.code(language: "ruby", class: "text-sm") do %>
# Page Builder Methods
page                              # Root container
├── page_header                   # Page header section  
│   ├── breadcrumbs              # Breadcrumb navigation
│   └── row                      # Header row with title/actions
│       ├── title(text, **opts)  # Page title
│       └── actions              # Action buttons block
└── section(title:, **opts)      # Content section
    ├── title(text, **opts)      # Section title  
    ├── subtitle(text, **opts)   # Section subtitle
    ├── actions                  # Section action buttons
    ├── body                     # Main section content
    └── attribute(label, value)   # Key-value attribute display

# Usage Pattern
&lt;%= ui.page do |p| %&gt;
  &lt;%= p.page_header do |h| %&gt;
    &lt;%= h.breadcrumbs do %&gt;...&lt;% end %&gt;
    &lt;%= h.row do |r| %&gt;
      &lt;%= r.title("Title") %&gt;
      &lt;%= r.actions do %&gt;...&lt;% end %&gt;
    &lt;% end %&gt;
  &lt;% end %&gt;
  
  &lt;%= p.section(title: "Section") do |s| %&gt;
    &lt;%= s.subtitle("Description") %&gt;
    &lt;%= s.actions do %&gt;...&lt;% end %&gt;
    &lt;%= s.body do %&gt;
      &lt;%= s.attribute("Key", "Value") %&gt;
    &lt;% end %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>