      <div class="space-y-6">
        <!-- Basic Attributes -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Basic Attributes</h3>
          <%= ui.page do |p| %>
            <%= p.section(title: "User Details") do |s| %>
              <%= s.body do %>
                <%= s.attribute("Full name", "John Doe") %>
                <%= s.attribute("Email address", "john.doe@example.com") %>
                <%= s.attribute("Status") do %>
                  <%= ui.badge("Active", severity: :success) %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
          <%= ui.code(variant: :minimal, class: "mt-3") do %>
&lt;%= p.section(title: "User Details") do |s| %&gt;
  &lt;%= s.body do %&gt;
    &lt;%= s.attribute("Full name", "John Doe") %&gt;
    &lt;%= s.attribute("Email address", "john.doe@example.com") %&gt;
    &lt;%= s.attribute("Status") do %&gt;
      &lt;%= ui.badge("Active", severity: :success) %&gt;
    &lt;% end %&gt;
  &lt;% end %&gt;
