<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Dropdown Button Component</h1>
  
  <div class="space-y-8">
    <!-- Basic Dropdown -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Basic Dropdown</h2>
      <div class="flex items-center gap-4">
        <%= ui.dropdown_button do |dd| %>
          <% dd.link_to "Profile", "#" %>
          <% dd.link_to "Settings", "#" %>
          <% dd.divider %>
          <% dd.button_to "Logout", "#", method: :delete %>
        <% end %>
      </div>
    </div>
    
    <!-- Dropdown with Icons -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Dropdown with Icons</h2>
      <div class="flex items-center gap-4">
        <%= ui.dropdown_button do |dd| %>
          <% dd.link_to "Profile", "#", icon: "heroicons/outline/user" %>
          <% dd.link_to "Access Keys", "#", icon: "heroicons/outline/key" %>
          <% dd.divider %>
          <% dd.button_to "Logout", "#", method: :delete, icon: "heroicons/outline/arrow-right-on-rectangle" %>
        <% end %>
      </div>
    </div>
    
    <!-- Different Variants -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Different Variants</h2>
      <div class="flex items-center gap-4">
        <%= ui.dropdown_button(variant: :contained, color: :primary) do |dd| %>
          <% dd.link_to "Edit", "#", icon: "heroicons/outline/pencil" %>
          <% dd.link_to "Duplicate", "#", icon: "heroicons/outline/document-duplicate" %>
          <% dd.divider %>
          <% dd.link_to "Archive", "#", icon: "heroicons/outline/archive-box" %>
          <% dd.link_to "Delete", "#", icon: "heroicons/outline/trash" %>
        <% end %>
        
        <%= ui.dropdown_button(variant: :outlined, color: :secondary) do |dd| %>
          <% dd.link_to "Download", "#", icon: "heroicons/outline/arrow-down-tray" %>
          <% dd.link_to "Share", "#", icon: "heroicons/outline/share" %>
          <% dd.link_to "Print", "#", icon: "heroicons/outline/printer" %>
        <% end %>
        
        <%= ui.dropdown_button(variant: :text, color: :primary) do |dd| %>
          <% dd.link_to "View", "#" %>
          <% dd.link_to "Edit", "#" %>
          <% dd.link_to "Delete", "#" %>
        <% end %>
      </div>
    </div>
    
    <!-- Complex Example -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Complex Example</h2>
      <div class="flex items-center gap-4">
        <%= ui.dropdown_button(variant: :contained, color: :default) do |dd| %>
          <% dd.link_to "Account settings", "#", icon: "heroicons/outline/cog" %>
          <% dd.link_to "Support", "#", icon: "heroicons/outline/lifebuoy" %>
          <% dd.link_to "License", "#", icon: "heroicons/outline/document-text" %>
          <% dd.divider %>
          <% dd.link_to "Add to favorites", "#", icon: "heroicons/outline/heart" %>
          <% dd.link_to "Archive", "#", icon: "heroicons/outline/archive-box" %>
          <% dd.divider %>
          <% dd.button_to "Sign out", "#", method: :delete, icon: "heroicons/outline/arrow-right-on-rectangle" %>
        <% end %>
      </div>
    </div>
    
    <!-- Without Primary Action -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Without Primary Action (Falls back to "Options")</h2>
      <div class="flex items-center gap-4">
        <%= ui.dropdown_button do |dd| %>
          <% dd.divider %>
          <% dd.link_to "Settings", "#" %>
          <% dd.link_to "Help", "#" %>
        <% end %>
      </div>
    </div>
    
    <!-- With JavaScript Actions (button_tag) -->
    <div>
      <h2 class="text-xl font-semibold mb-4">JavaScript Actions with button_tag</h2>
      <div class="flex items-center gap-4">
        <%= ui.dropdown_button(variant: :outlined, color: :primary) do |dd| %>
          <% dd.button_tag "Copy to Clipboard", 
                           data: { action: "click->clipboard#copy", 
                                   clipboard_text: "Hello, World!" },
                           icon: "heroicons/outline/clipboard" %>
          <% dd.button_tag "Show Alert", 
                           onclick: "alert('Button clicked!')",
                           icon: "heroicons/outline/bell" %>
          <% dd.divider %>
          <% dd.link_to "View Original", "#", icon: "heroicons/outline/eye" %>
        <% end %>
        
        <%= ui.dropdown_button(variant: :contained, color: :secondary) do |dd| %>
          <% dd.link_to "Export", "#", icon: "heroicons/outline/arrow-down-tray" %>
          <% dd.button_tag "Copy Link", 
                           data: { action: "click->clipboard#copy",
                                   clipboard_text: "window.location.href" },
                           icon: "heroicons/outline/link" %>
          <% dd.button_tag "Print", 
                           onclick: "window.print()",
                           icon: "heroicons/outline/printer" %>
        <% end %>
      </div>
    </div>
    
    <!-- Mixed Actions Example -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Mixed Actions (Links, Forms, and JavaScript)</h2>
      <div class="flex items-center gap-4">
        <%= ui.dropdown_button do |dd| %>
          <% dd.link_to "View Details", "#", icon: "heroicons/outline/document-text" %>
          <% dd.button_tag "Toggle Favorite", 
                           data: { action: "click->favorite#toggle" },
                           icon: "heroicons/outline/star" %>
          <% dd.divider %>
          <% dd.button_tag "Duplicate", 
                           data: { action: "click->duplicate#create" },
                           icon: "heroicons/outline/document-duplicate" %>
          <% dd.link_to "Move to...", "#", icon: "heroicons/outline/folder" %>
          <% dd.divider %>
          <% dd.button_to "Delete", "#", method: :delete, 
                          data: { confirm: "Are you sure?" },
                          icon: "heroicons/outline/trash" %>
        <% end %>
      </div>
    </div>
    
    <!-- Mixed Icons Example -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Mixed Menu Items (With and Without Icons)</h2>
      <div class="flex items-center gap-4">
        <%= ui.dropdown_button(variant: :outlined, color: :default) do |dd| %>
          <% dd.link_to "New Document", "#", icon: "heroicons/outline/document-plus" %>
          <% dd.link_to "Open Recent", "#" %>
          <% dd.link_to "Import...", "#", icon: "heroicons/outline/arrow-down-tray" %>
          <% dd.divider %>
          <% dd.link_to "Save", "#", icon: "heroicons/outline/arrow-down-on-square" %>
          <% dd.link_to "Save As...", "#" %>
          <% dd.link_to "Export", "#", icon: "heroicons/outline/arrow-up-tray" %>
          <% dd.divider %>
          <% dd.link_to "Print Preview", "#" %>
          <% dd.link_to "Page Setup", "#" %>
          <% dd.button_tag "Print", onclick: "window.print()", icon: "heroicons/outline/printer" %>
        <% end %>
      </div>
    </div>
    
    <!-- Single Action (No Dropdown) -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Single Action (No Dropdown)</h2>
      <p class="text-sm text-gray-600 mb-4">When only one action is provided, it renders as a regular button without the dropdown chevron.</p>
      <div class="flex items-center gap-4">
        <%= ui.dropdown_button(variant: :contained, color: :primary) do |dd| %>
          <% dd.link_to "Create New", "#", icon: "heroicons/outline/plus" %>
        <% end %>
        
        <%= ui.dropdown_button(variant: :outlined, color: :secondary) do |dd| %>
          <% dd.button_to "Delete", "#", method: :delete, icon: "heroicons/outline/trash" %>
        <% end %>
        
        <%= ui.dropdown_button(variant: :text, color: :default) do |dd| %>
          <% dd.button_tag "Refresh", onclick: "location.reload()", icon: "heroicons/outline/arrow-path" %>
        <% end %>
      </div>
    </div>
  </div>
</div>